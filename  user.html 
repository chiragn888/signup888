<!DOCTYPE html>
<html>
<head>
    <title>User Details</title>
    <link rel="stylesheet" href="index.css">
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
</head>
<body>
    <center>
        <h1>Enter User Details</h1>
        <form id="user-details-form">
            <input type="text" id="name" placeholder="Name" required><br>
            <input type="tel" id="phone" placeholder="Phone Number" required><br>
            <textarea id="address" placeholder="Address" required></textarea><br>
            <input type="file" id="photo" accept="image/*" required><br>
            <button type="submit">Submit</button>
        </form>
    </center>

    <script>
        document.getElementById('user-details-form').addEventListener('submit', function(e) {
            e.preventDefault();

            var name = document.getElementById('name').value;
            var phone = document.getElementById('phone').value;
            var address = document.getElementById('address').value;
            var photo = document.getElementById('photo').files[0];

            var formData = new FormData();
            formData.append('name', name);
            formData.append('phone', phone);
            formData.append('address', address);
            formData.append('photo', photo);

            // Replace with your own script URL
            var scriptURL = 'https://script.google.com/macros/s/AKfycbwYourGoogleScriptID/exec';

            axios.post(scriptURL, formData)
                .then(response => {
                    console.log(response.data);
                    alert('User details saved successfully.');
                })
                .catch(error => {
                    console.error(error);
                    alert('Failed to save user details.');
                });
        });
    </script>
</body>
</html>